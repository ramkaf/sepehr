  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest --max-old-space-size=4096 start --tsc --preserveWatchOutput --no-type-checking --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect=0.0.0.0:9229 --ignore-watch node_modules src/main.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8.13.1",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cache-manager": "^3.1.0",
