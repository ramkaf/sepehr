    "moment-timezone": "^0.6.0",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
